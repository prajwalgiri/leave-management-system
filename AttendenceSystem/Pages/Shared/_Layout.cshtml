@using AttendenceSystem.Data
@inject ApplicationDbContext _context
@{
    var company = _context.CompanyInfo.FirstOrDefault();
    var companyName = company?.Name ?? "AttendenceSystem";
    var logoUrl = company?.LogoUrl ?? "/images/default-logo.png";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @companyName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AttendenceSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <img src="@logoUrl" alt="Logo" style="height: 30px; margin-right: 10px;" />
                    <span>@companyName</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarLeaves" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Leaves
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarLeaves">
                                    <li><a class="dropdown-item" asp-area="" asp-page="/RequestLeave">Request Leave</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/ViewLeaves">My Leaves</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Dashboards/MonthlyLeaveSchedule">Monthly Schedule</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Privacy">Privacy</a></li>
                                </ul>
                            </li>

                            @if (User.IsInRole("Supervisor") || User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarManagement" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Management
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarManagement">
                                        <li><a class="dropdown-item" asp-area="" asp-page="/ApproveLeave">Approve Leaves</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-page="/Dashboards/DepartmentDashboard">Dept Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-page="/Dashboards/WeeklyLeaves">Weekly Leaves</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-page="/Dashboards/TodaysLeaves">Today's Leaves</a></li>
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarAdmin" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        System Admin
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarAdmin">
                                        <li><a class="dropdown-item" asp-area="" asp-page="/Dashboards/AdminDashboard">Admin Dashboard</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-area="" asp-page="/Employees">Employees</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-page="/ManageDepartments">Departments</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-page="/ManageCompany">Company Management</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-page="/ManageLeavePolicy">Leave Policy</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AttendenceSystem - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>