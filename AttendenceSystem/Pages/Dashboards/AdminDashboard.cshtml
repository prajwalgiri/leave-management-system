@page
@model AttendenceSystem.Pages.Dashboards.AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Overview</h2>

<div class="row mt-4">
    <div class="col-md-4 col-lg-2 mb-3">
        <a asp-page="/Employees" class="text-decoration-none">
            <div class="card text-white bg-primary h-100">
                <div class="card-body">
                    <h6 class="card-title">Employees</h6>
                    <p class="card-text h3">@Model.TotalEmployees</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4 col-lg-2 mb-3">
        <a asp-page="/ManageDepartments" class="text-decoration-none">
            <div class="card text-white bg-success h-100">
                <div class="card-body">
                    <h6 class="card-title">Departments</h6>
                    <p class="card-text h3">@Model.TotalDepartments</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4 col-lg-2 mb-3">
        <a asp-page="/ApproveLeave" class="text-decoration-none">
            <div class="card text-white bg-warning h-100">
                <div class="card-body">
                    <h6 class="card-title">Pending</h6>
                    <p class="card-text h3">@Model.PendingLeaves</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4 col-lg-3 mb-3">
        <a asp-page="/Dashboards/TodaysLeaves" class="text-decoration-none">
            <div class="card text-white bg-info h-100">
                <div class="card-body">
                    <h6 class="card-title">Leaves Today</h6>
                    <p class="card-text h3">@Model.TotalLeavesToday</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4 col-lg-3 mb-3">
        <a asp-page="/Dashboards/DepartmentDashboard" class="text-decoration-none">
            <div class="card text-white bg-dark h-100">
                <div class="card-body">
                    <h6 class="card-title">Total Leaves</h6>
                    <p class="card-text h3">@Model.TotalLeaves</p>
                </div>
            </div>
        </a>
    </div>
</div>

<h4 class="mt-4">Department Statistics</h4>
<table class="table table-bordered mt-2">
    <thead class="table-light">
        <tr>
            <th>Department Name</th>
            <th>Employee Count</th>
            <th>Total Leave Requests</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var dept in Model.DepartmentSummaries)
    {
        <tr>
            <td>@dept.Name</td>
            <td>@dept.EmployeeCount</td>
            <td>@dept.LeaveCount</td>
            <td>
                @* Potential link to filtered view if needed *@
                <span class="text-muted">No actions</span>
            </td>
        </tr>
    }
    </tbody>
</table>
