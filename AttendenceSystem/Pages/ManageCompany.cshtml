@page
@model AttendenceSystem.Pages.ManageCompanyModel
@{
    ViewData["Title"] = "Manage Company";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white p-3">
                    <h4 class="mb-0">Organization Settings</h4>
                </div>
                <div class="card-body p-4">
                    @if (TempData["StatusMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["StatusMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Input.Id" />

                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label fw-bold"></label>
                            <input asp-for="Input.Name" class="form-control" placeholder="e.g. Acme Corp" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Email" class="form-label fw-bold"></label>
                                <input asp-for="Input.Email" class="form-control" placeholder="info@company.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.ContactNumber" class="form-label fw-bold"></label>
                                <input asp-for="Input.ContactNumber" class="form-control" placeholder="+1234567890" />
                                <span asp-validation-for="Input.ContactNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Address" class="form-label fw-bold"></label>
                            <textarea asp-for="Input.Address" class="form-control" rows="3" placeholder="Full office address"></textarea>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.LogoUrl" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-image"></i></span>
                                <input asp-for="Input.LogoUrl" class="form-control" placeholder="/images/logo.png" />
                            </div>
                            <div class="form-text">Provide a local path or external URL for the company logo.</div>
                            <span asp-validation-for="Input.LogoUrl" class="text-danger"></span>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Input.LogoUrl))
                        {
                            <div class="mb-4 p-3 border rounded text-center bg-light">
                                <div class="text-muted mb-2 small">Logo Preview</div>
                                <img src="@Model.Input.LogoUrl" alt="Logo Preview" style="max-height: 80px; max-width: 100%;" />
                            </div>
                        }

                        <hr class="my-4" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="/Dashboards/AdminDashboard" class="btn btn-outline-secondary px-4">Cancel</a>
                            <button type="submit" class="btn btn-primary px-5">Save Information</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
