@page
@model AttendenceSystem.Pages.EmployeesModel
@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<a class="btn btn-success mb-3" asp-page="/AddEmployee">Add Employee</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Department</th>
            <th>Total Leaves (This Year)</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var emp in Model.EmployeeList)
    {
        <tr>
            <td>@emp.UserName</td>
            <td>@emp.Name</td>
            <td>@emp.Email</td>
            <td>@emp.Phone</td>
            <td>@emp.Department</td>
            <td>@emp.TotalLeaves</td>
        </tr>
    }
    </tbody>
</table>